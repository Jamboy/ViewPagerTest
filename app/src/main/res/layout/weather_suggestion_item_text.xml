<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    app:cardCornerRadius="10dp"
    android:id="@+id/cardview_suggestion_item">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:orientation="vertical">

        <include layout="@layout/weather_suggestion_drsg_item"/>

        <include layout="@layout/weather_suggestion_uv_item"/>

        <include layout="@layout/weather_suggestion_trav_item"/>

        <include layout="@layout/weather_suggestion_sport_item"/>

    </LinearLayout>
</android.support.v7.widget.CardView>