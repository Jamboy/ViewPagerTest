<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

            <ImageView
                android:layout_alignParentLeft="true"
                android:layout_alignParentBottom="true"
                android:layout_marginLeft="8dp"
                android:layout_marginBottom="165dp"
                android:id="@+id/now_tmp_image"
                android:src="@drawable/sun"
                android:layout_width="35dp"
                android:layout_height="35dp"/>

            <TextView
                android:textColor="@android:color/white"
                android:layout_alignParentLeft="true"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="166dp"
                android:layout_marginLeft="50dp"
                android:textSize="20sp"
                android:id="@+id/now_tmp_desc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>


            <TextView
                android:textColor="@android:color/white"
                android:layout_alignParentLeft="true"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="122dp"
                android:layout_marginLeft="8dp"
                android:textSize="25sp"
                android:id="@+id/now_tmp_max"
                style="@style/WeatherForecastListItemTextDeEmphasis"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:textColor="@android:color/white"
                android:layout_alignParentLeft="true"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="122dp"
                android:layout_marginLeft="70dp"
                android:id="@+id/now_tmp_min"
                android:textSize="25sp"
                style="@style/WeatherForecastListItemTextDeEmphasis"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>


        <TextView
            android:textColor="@android:color/white"
            android:layout_alignParentBottom="true"
            android:padding="5dp"
            android:id="@+id/now_tmp"
            style="@style/WeatherForecastListItemText"
            android:textSize="120sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

</RelativeLayout>